{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "noImplicitAny":false,
    /* Linting 
      noUnusedLocals  改为false，不去校验未使用的变量。
    */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
    }
  },
  "include": ["src/**/*.ts","src/*.d.ts","src/**/*.d.ts", "src/**/*.tsx", "src/**/*.jsx", "src/**/*.vue",
    "src/icons/index.js"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
